        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="41" Margin="164,227,0,0" VerticalAlignment="Top" Width="137" Click="btnLogin_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="41" Margin="14,227,0,0" VerticalAlignment="Top" Width="136" Click="btnCancel_Click" Grid.Column="1"/>
        <Label Content="LOGIN SCREEN" HorizontalAlignment="Left" Height="36" Margin="232,10,0,0" VerticalAlignment="Top" Width="164" FontWeight="Bold" FontSize="18" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
