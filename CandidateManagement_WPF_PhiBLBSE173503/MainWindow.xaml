        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="156*"/>
            <ColumnDefinition Width="127*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="65,56,0,0" VerticalAlignment="Top" Width="69" FontSize="16"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="164,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="323" Height="41" TextChanged="txtEmail_TextChanged" FontSize="16" Grid.ColumnSpan="2" Text="admin@hr.com.vn"/>
